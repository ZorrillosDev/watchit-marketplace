{
  "name": "watchit-contracts",
  "version": "0.1.0",
  "description": "Smart Contracts for the WatchIt Economy",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [],
  "main": "webpack.config.babel.js",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:solidity",
    "lint:js": "standard",
    "lint:js:fix": "standard --fix",
    "lint:solidity": "solhint 'contracts/**/*.sol'",
    "test": "make test",
    "test:ui": "jest --watchAll=false",
    "test:coverage": "nyc hardhat coverage",
    "test:goerli": "npx hardhat test --network goerli",
    "test:kovan": "npx hardhat test --network kovan",
    "test:rinkeby": "npx hardhat test --network rinkeby",
    "test:ropsten": "npx hardhat test --network ropsten",
    "hook": "hh compile && npm run lint:js:fix && npm run test && npm run test:ui",
    "watch:ui": "webpack  --watch ",
    "build:ui": "cross-env NODE_ENV=production webpack",
    "start:ui": "cross-env WEBPACK_IS_DEV_SERVER=true NODE_ENV=development webpack serve --config webpack.config.babel.js"
  },
  "devDependencies": {
