{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2017",
    "module": "ES2020",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "@public/*": [
        "public/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@state/*": [
        "src/redux/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@layouts/*": [
        "src/pages/__layouts__/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@i18n/*": [
        "src/i18n/*"
      ],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "preserve",
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/.*/"]
}
